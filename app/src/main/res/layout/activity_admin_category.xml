<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/slogan_category"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Add New Product"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#F44336"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearlayout1"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center">
        
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/t_shirt"
            android:src="@drawable/tshirts"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/female_dress"
            android:layout_marginStart="16dp"
            android:src="@drawable/female_dresses"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/sweater"
            android:layout_marginStart="16dp"
            android:src="@drawable/sweather"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:id="@+id/sport_t"
            android:src="@drawable/sports"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearlayout2"
        android:layout_below="@+id/linearlayout1"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/hats"
            android:src="@drawable/hats"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/glass"
            android:layout_marginStart="16dp"
            android:src="@drawable/glasses"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/purse"
            android:layout_marginStart="16dp"
            android:src="@drawable/purses_bags"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/shoe"
            android:src="@drawable/shoess"
            android:layout_marginStart="16dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearlayout3"
        android:layout_below="@+id/linearlayout2"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/laptop"
            android:src="@drawable/laptops"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/headphone"
            android:layout_marginStart="16dp"
            android:src="@drawable/headphoness"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/watch"
            android:layout_marginStart="16dp"
            android:src="@drawable/watches"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/phone"
            android:src="@drawable/mobiles"
            android:layout_marginStart="16dp"/>


    </LinearLayout>

</RelativeLayout>