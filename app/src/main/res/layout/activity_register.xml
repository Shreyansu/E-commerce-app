<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/leaf"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/app_login"
        android:layout_width="325dp"
        android:layout_height="123dp"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/applogo" />

    <EditText
        android:id="@+id/register_name"
        style="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_login"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/text_design"
        android:hint="Enter your name"
        android:padding="20dp"
        android:textColor="#F44336"
        android:textColorHint="#FA0357"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/number_login"
        style="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_name"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/text_design"
        android:hint="Enter phone number"
        android:padding="20dp"
        android:textColor="#F44336"
        android:textColorHint="#FA0357"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number_login"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/text_design"
        android:ems="10"
        android:hint="Enter password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColorHint="#FF0C5F"

        />

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText2"
        android:layout_marginTop="-1dp"
        android:orientation="horizontal">




    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Registeracc"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/linearlayout"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/button1"
        android:padding="20dp"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:text="Create an account"
        android:textColor="@android:color/white"/>


</RelativeLayout>